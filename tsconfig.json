{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "CommonJS",  
    "moduleResolution": "node",                 
    "lib": ["es2017"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*.ts", // Путь к вашим TypeScript файлам
    "src/**/*.d.ts" // Файлы объявлений типов
  ]
}